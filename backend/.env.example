# ================================================
# VEHICLE BOOKING SYSTEM - BACKEND ENVIRONMENT
# ================================================

# Server Configuration
NODE_ENV=development
PORT=5000
https://gia-vehicle-booking-hbem.onrender.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@aws-1-eu-west-1.pooler.supabase.com:6543/database?pgbouncer=true&statement_cache_size=0

# JWT Configuration
JWT_SECRET=super_secret_jwt_key_to_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@giagroup.net

# Payment Providers (Optional for MVP)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
PAYPAL_CLIENT_ID=xxxxx
PAYPAL_CLIENT_SECRET=xxxxx

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (if needed)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
